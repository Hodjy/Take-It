<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/dialog_fragment_change_picture_user_picture_iv"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_baseline_camera_alt_24"
        android:id="@+id/dialog_fragment_change_picture_camera_iv"
        android:layout_below="@id/dialog_fragment_change_picture_user_picture_iv"
        android:layout_toStartOf="@id/dialog_fragment_change_picture_space"/>
    <Space
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:id="@+id/dialog_fragment_change_picture_space"
        android:layout_below="@id/dialog_fragment_change_picture_user_picture_iv"
        android:layout_centerHorizontal="true"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_baseline_insert_drive_file_24"
        android:id="@+id/dialog_fragment_change_picture_file_iv"
        android:layout_below="@id/dialog_fragment_change_picture_user_picture_iv"
        android:layout_toEndOf="@id/dialog_fragment_change_picture_space" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm"
        android:backgroundTint="?attr/colorPrimary"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/dialog_fragment_change_picture_back_btn"
        android:id="@+id/dialog_fragment_change_picture_confirm_btn"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:backgroundTint="?attr/colorPrimary"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/dialog_fragment_change_picture_back_btn"/>

</RelativeLayout>