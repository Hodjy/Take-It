<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:fontFamily="sans-serif-light"
        android:textSize="40sp"
        android:gravity="center"
        android:paddingTop="200dp"
        android:paddingBottom="200dp"
        android:id="@+id/fragment_welcome_screen_welcome_tv"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="?attr/colorPrimary"
        android:text="@string/sign_in"
        android:id="@+id/fragment_welcome_screen_sign_in_btn"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="?attr/colorPrimary"
        android:text="@string/guest"
        android:id="@+id/fragment_welcome_screen_sign_in_as_guest_btn"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="?attr/colorPrimary"
        android:text="@string/register"
        android:id="@+id/fragment_welcome_screen_register_btn"/>


</LinearLayout>