<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Finalapp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue_light</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/white</item>
        <item name="fontFamily">sans-serif-light</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Finalapp.SmallComponent</item>
        <item name="materialButtonStyle">@style/materialButtonStyle.Finalapp</item>

    </style>

    <style name="ShapeAppearance.Finalapp.SmallComponent"
        parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="textAllCaps">false</item>
    </style>

    <style name="materialButtonStyle.Finalapp"
        parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">2dp</item>
    </style>

</resources>