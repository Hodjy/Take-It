<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chat_layout_headline_layout"
        android:layout_marginBottom="10dp">

        <com.google.android.material.button.MaterialButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_baseline_arrow_back_24"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:id="@+id/chat_layout_back_btn"
            android:layout_marginEnd="5dp"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/chat_layout_chat_picture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/chat_layout_back_btn"
            android:background="@drawable/placeholder_circle" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/chat_layout_chat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/chat_layout_chat_picture"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold"
            android:text="@string/name"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/chat_layout_headline_layout"
        android:layout_above="@+id/chat_layout_message_et"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="25sp"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:fontFamily="sans-serif-light"
        android:id="@+id/chat_layout_message_et"
        android:layout_margin="10dp"
        android:hint="@string/text"
        android:layout_toStartOf="@+id/chat_layout_send_btn"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:id="@+id/chat_layout_send_btn"
        android:background="@drawable/ic_baseline_send_24"/>

</RelativeLayout>