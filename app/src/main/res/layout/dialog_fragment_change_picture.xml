<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/dialog_fragment_change_picture_user_picture_iv"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/dialog_fragment_change_picture_camera_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/dialog_fragment_change_picture_user_picture_iv"
            android:layout_alignEnd="@id/dialog_fragment_change_picture_space"
            android:layout_marginEnd="10dp"
            android:src="@drawable/outline_add_a_photo_24"
            app:tint="?attr/colorSecondary"/>

        <Space
            android:id="@+id/dialog_fragment_change_picture_space"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_below="@id/dialog_fragment_change_picture_user_picture_iv"
            android:layout_centerHorizontal="true" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/dialog_fragment_change_picture_file_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/dialog_fragment_change_picture_user_picture_iv"
            android:layout_toEndOf="@id/dialog_fragment_change_picture_space"
            app:tint="?attr/colorSecondary"
            android:src="@drawable/outline_add_photo_alternate_24" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialog_fragment_change_picture_confirm_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_fragment_change_picture_file_iv"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:text="@string/confirm" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialog_fragment_change_picture_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_fragment_change_picture_file_iv"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:layout_marginBottom="30dp"
            android:text="@string/back" />

    </RelativeLayout>
</LinearLayout>